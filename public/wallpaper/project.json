{
    "title": "Luvia Gallery Wallpaper",
    "description": "Dynamic web-based wallpaper powered by your Luvia Gallery instance.",
    "file": "index.html",
    "preview": "preview.jpg",
    "type": "web",
    "general": {
        "properties": {
            "server": {
                "text": "Server Address",
                "type": "text",
                "value": "http://your-server-ip:3000"
            },
            "token": {
                "text": "API Token",
                "type": "text",
                "value": "your_token_here"
            },
            "path": {
                "text": "Folder Path",
                "type": "text",
                "value": "/"
            },
            "freq": {
                "text": "Switch Frequency (seconds)",
                "type": "slider",
                "min": 10,
                "max": 3600,
                "value": 60
            },
            "show_info": {
                "text": "Show Media Info",
                "type": "bool",
                "value": true
            }
        }
    }
}